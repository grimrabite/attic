<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ title or "Attic" }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/assets/styles.css">
  <!-- Google Fonts for handwritten/serif combo -->
  <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Merriweather&display=swap" rel="stylesheet">
</head>
<body>
<nav class="site-nav">
  <a href="/">Home</a>
  <a href="/attic/">Attic</a>
  <a href="/scenes/">Scenes</a>
  <a href="/sketches/">Sketches</a>
  <a href="/characters/">Characters</a>
  <a href="/tags/">Tags</a>
  <a href="#" id="randomNavBtn">Random</a>
</nav>
  <main>
    {{ content | safe }}
  </main>
  <script>
    // Random button JSâ€”injects all post URLs at build time
    const randomPages = [
      {% for post in collections.all %}
        "{{ post.url }}"{% if not loop.last %},{% endif %}
      {% endfor %}
    ];
    function randomNav() {
      const pick = randomPages[Math.floor(Math.random() * randomPages.length)];
      window.location.href = pick;
    }
    document.getElementById('randomNavBtn')?.addEventListener('click', function(e) {
      e.preventDefault(); randomNav();
    });
    document.getElementById('randomBtn')?.addEventListener('click', function(e) {
      e.preventDefault(); randomNav();
    });
  </script>
</body>
</html>
