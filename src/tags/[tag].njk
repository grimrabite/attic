---
layout: layout.njk
pagination:
  data: collections.all
  size: 100
  alias: posts
eleventyComputed:
  tag: tag
permalink: "{% if tag %}/tags/{{ tag | slug }}/{% else %}/_trash.html{% endif %}"
---
{% if tag %}
<h1>Tag: {{ tag }}</h1>
<ul>
  {% for post in posts %}
    {% set tags = post.data.tags %}
    {% if tags %}
      {% if tags is string %}
        {% set tags = [tags] %}
      {% endif %}
      {% if tag in tags %}
        <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
      {% endif %}
    {% endif %}
  {% endfor %}
</ul>
{% endif %}
