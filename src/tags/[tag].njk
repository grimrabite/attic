---
layout: layout.njk
pagination:
  data: collections.all | getAllTags
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slug }}/"
eleventyComputed:
  tag: tag
---

<h1>Tag: {{ tag }}</h1>
<ul>
{% for post in collections.all %}
  {% set tags = post.data.tags %}
  {% set tagsArr = tags %}
  {# Cast to array if needed #}
  {% if tagsArr %}
    {% if tagsArr is string %}
      {% set tagsArr = [tagsArr] %}
    {% endif %}
    {% if tag in tagsArr %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        {% if post.date %} â€” {{ post.date | date("yyyy-MM-dd") }}{% endif %}
      </li>
    {% endif %}
  {% endif %}
{% endfor %}
</ul>