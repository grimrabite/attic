---
layout: layout.njk
title: "Attic"
permalink: "/attic/"
---

<h1>Attic</h1>
<div class="grid-posts">
  {% for post in collections.attic %}
    <div class="post-card">
      <div class="title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </div>
      {% if post.date or post.data.tags %}
        <div class="meta">
          {# Nunjucks date filter #}
          {% if post.date %}{{ post.date | date("yyyy-MM-dd") }}{% endif %}
          {# join tags with comma #}
          {% if post.data.tags %} &nbsp; | &nbsp; {{ post.data.tags | join(", ") }}{% endif %}
        </div>
      {% endif %}
      {% if post.data.description %}
        <div class="desc">{{ post.data.description }}</div>
      {% endif %}
    </div>
  {% endfor %}
</div>
